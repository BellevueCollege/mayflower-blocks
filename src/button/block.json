{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "mayflower-blocks/button",
	"version": "1.1.1",
	"title": "Button",
	"category": "bootstrap-blocks",
	"icon": "button",
	"description": "A button available in a variety of styles. When clicked, opens the configured link.",
	"supports": {
		"html": true
	},
	"textdomain": "mayflower-blocks",
	"attributes": {
		"buttonText" : {
			"type": "string",
			"selector": "a"
		},
		"buttonLink" : {
			"type": "string",
			"source": "attribute",
			"attribute": "href",
			"selector": "a"
		},
		"linkTarget" : {
			"type": "string",
			"source": "attribute",
			"attribute": "target",
			"selector": "a"
		},
		"rel": {
			"type": "string",
			"source": "attribute",
			"selector": "a",
			"attribute": "rel"
		},
		"buttonType" : {
			"type": "string",
			"default": "primary"
		},
		"activeButtonType" : {
			"type": "string",
			"default": "primary"
		},
		"buttonAlign" : {
			"type": "string"
		},
		"buttonDisplay" : {
			"type": "string",
			"default": "block"
		},
		"buttonBlock" : {
			"type": "boolean",
			"default": false
		},
		"buttonSize" : {
			"type": "string",
			"default": ""
		},
		"isBootstrap5": {
			"type": "boolean",
			"default": false
		},
		"placeholder": {
			"type": "string",
			"default": "Button Text"
		}
	},
	"usesContext": [
		"mayflower-blocks/_btnDisableBlockInline"
	],
	"example": {
		"attributes": {
			"buttonText": "Button Text",
			"buttonLink": "https://www.bellevuecollege.edu",
			"buttonType": "primary",
			"buttonBlock": false,
			"buttonSize": ""
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
