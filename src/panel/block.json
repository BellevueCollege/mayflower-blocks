{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "mayflower-blocks/panel",
	"version": "1.1.0",
	"title": "Card (Panel)",
	"category": "bootstrap-blocks",
	"icon": "align-center",
	"description": "The card block allows content to be displayed in a card format, optionally with a header and footer.",
	"supports": {
		"html": true,
		"align": ["wide"]
	},
	"textdomain": "mayflower-blocks",
	"attributes": {
		"limitations": {
			"type": "string",
			"default": "none"
		},
		"cardText": {
			"type": "string"
		},
		"cardType": {
			"type": "string",
			"default": "default"
		},
		"cardImage": {
			"type": "boolean",
			"default": false
		},
		"cardImageId": {
			"type": "number",
			"default": 0
		},
		"cardImageUrl": {
			"type": "string",
			"source": "attribute",
			"selector": "img.card-img-top",
			"attribute": "src"
		},
		"cardImageAlt": {
			"type": "string",
			"source": "attribute",
			"selector": "img.card-img-top",
			"attribute": "alt"
		},
		"cardImageSize": {
			"type": "string",
			"default": "large"
		},
		"cardHeading": {
			"type": "boolean",
			"default": true
		},
		"cardHeadingText": {
			"type": "string",
			"source": "html",
			"selector": ".card-header"
		},
		"cardHeadingTag": {
			"type": "string",
			"default": "h2"
		},
		"activeHeadingClass": {
			"type": "string",
			"default": "h2"
		},
		"cardLightBg": {
			"type": "boolean",
			"default": false
		},
		"cardFooter": {
			"type": "boolean",
			"default": true
		},
		"cardFooterText": {
			"type": "string",
			"source": "html",
			"selector": ".card-footer"
		}
	},
	"example":{
		"attributes": {
			"cardType": "default",
			"cardHeading": true,
			"cardHeadingText": "Card Heading",
			"cardHeadingTag": "h2",
			"activeHeadingClass": "h2",
			"cardLightBg": false,
			"cardFooter": true,
			"cardFooterText": "Card Footer"
		},
		"innerBlocks": [
			{
				"name": "core/paragraph",
				"attributes": {
					"content": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
				}
			}
		]
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
